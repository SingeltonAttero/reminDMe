<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RemindMe"
        parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_secondary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_variant_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_secondary_light</item>
        <item name="colorOnSecondary">@color/primary_variant_secondary_dark</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor"
            tools:targetApi="l">?attr/colorPrimary
        </item>
        <item name="android:navigationBarColor"
            tools:targetApi="l">?attr/colorPrimary
        </item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.RemindMe.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="CalenderViewCustom"
        parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorAccent">?attr/colorPrimary</item>
    </style>
</resources>